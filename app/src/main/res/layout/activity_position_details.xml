<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable name="viewModel" type="org.cerion.stockcharts.positions.PositionDetailViewModel"/>
        <import type="android.view.View"/>
    </data>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:columnCount="2"
        android:verticalSpacing="10dp"
        tools:context="org.cerion.stockcharts.positions.PositionDetailActivity">

        <TextView android:text="Symbol" style="@style/TextAppearance.GridLabel" />
        <TextView
            android:id="@+id/symbol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:text="@{viewModel.getSymbol()}"
            tools:text="X"/>

        <TextView android:text="Count" style="@style/TextAppearance.GridLabel"/>
        <TextView
            android:id="@+id/count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{viewModel.getCount()}"
            tools:text="55" />

        <TextView android:text="Purchase Date" style="@style/TextAppearance.GridLabel"/>
        <TextView
            android:id="@+id/purchase_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{viewModel.getPurchaseDate()}"
            tools:text="1/1/2000" />

        <TextView android:text="Purchase Price" style="@style/TextAppearance.GridLabel"/>

        <TextView
            android:id="@+id/purchase_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{viewModel.getPurchasePrice()}"
            tools:text="$0.00"/>

        <TextView android:text="Purchase Value" style="@style/TextAppearance.GridLabel"/>
        <TextView
            android:id="@+id/purchase_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{viewModel.purchaseCost}"
            tools:text="$0.00" />

        <TextView android:text="Dividends Reinvested" style="@style/TextAppearance.GridLabel" android:paddingBottom="20dp" android:paddingEnd="10dp"/>
        <TextView
            android:id="@+id/dividends_reinvested"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{viewModel.dividendsReinvested}"
            tools:text="No" />

        <TextView android:text="Current Quantity" style="@style/TextAppearance.GridLabel" android:visibility="@{viewModel.showDividendFields ? View.GONE : View.VISIBLE}"/>
        <TextView
            android:id="@+id/current_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{viewModel.currentCount}"
            android:visibility="@{viewModel.showDividendFields ? View.GONE : View.VISIBLE}"
            tools:text="0" />

        <TextView android:text="Current Price" style="@style/TextAppearance.GridLabel"/>
        <TextView
            android:id="@+id/current_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{viewModel.currentPrice}"
            tools:text="$0.00" />

        <TextView android:text="Current Value" style="@style/TextAppearance.GridLabel"/>
        <TextView
            android:id="@+id/current_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{viewModel.currentValue}"
            tools:text="$0.00" />

        <TextView android:text="Percent Change" style="@style/TextAppearance.GridLabel"/>
        <TextView
            android:id="@+id/price_percent_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{viewModel.change}"
            tools:text="%0.0" />

        <TextView android:text="Profit" style="@style/TextAppearance.GridLabel" android:paddingBottom="20dp" />
        <TextView
            android:id="@+id/profit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{viewModel.profit}"
            tools:text="$0.00" />

        <TextView android:text="Dividends" style="@style/TextAppearance.GridLabel" android:visibility="@{viewModel.showDividendFields ? View.VISIBLE : View.GONE}"/>
        <TextView
            android:id="@+id/dividends_earned"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{viewModel.dividends}"
            android:visibility="@{viewModel.showDividendFields ? View.VISIBLE : View.GONE}"
            tools:text="$0.00" />

        <TextView android:text="Total Profit" style="@style/TextAppearance.GridLabel" android:visibility="@{viewModel.showDividendFields ? View.VISIBLE : View.GONE}"/>
        <TextView
            android:id="@+id/profit_with_dividends"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{viewModel.profitWithDividends}"
            android:visibility="@{viewModel.showDividendFields ? View.VISIBLE : View.GONE}"
            tools:text="$0.00" />

        <TextView android:text="Total Percent Change" style="@style/TextAppearance.GridLabel" android:visibility="@{viewModel.showDividendFields ? View.VISIBLE : View.GONE}"/>
        <TextView
            android:id="@+id/total_percent_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{viewModel.changeWithDividends}"
            android:visibility="@{viewModel.showDividendFields ? View.VISIBLE : View.GONE}"
            tools:text="%0.0" />

        <TextView android:text="Last Dividend" style="@style/TextAppearance.GridLabel" android:visibility="@{viewModel.showDividendFields ? View.VISIBLE : View.GONE}"/>
        <TextView
            android:id="@+id/last_dividend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{viewModel.lastDividendPaid}"
            android:visibility="@{viewModel.showDividendFields ? View.VISIBLE : View.GONE}"
            tools:text="$0.00" />

        <TextView android:text="Last Dividend Date" style="@style/TextAppearance.GridLabel" android:visibility="@{viewModel.showDividendFields ? View.VISIBLE : View.GONE}"/>
        <TextView
            android:id="@+id/last_dividend_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{viewModel.lastDividendDate}"
            android:visibility="@{viewModel.showDividendFields ? View.VISIBLE : View.GONE}"
            tools:text="1/1/2000" />

        <TextView android:text="Next Dividend Est" style="@style/TextAppearance.GridLabel" android:visibility="@{viewModel.showDividendFields ? View.VISIBLE : View.GONE}"/>
        <TextView
            android:id="@+id/next_dividend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{viewModel.nextDividendEst}"
            android:visibility="@{viewModel.showDividendFields ? View.VISIBLE : View.GONE}"
            tools:text="1/1/2000" />

    </GridLayout>

</layout>